{% extends "base.html.twig" %}

{% block header %}Users{% endblock %}

{% block content %}
<div class="markdown">
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>E-mail</th>
                <th>Roles</th>
                <th>Status</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.roles | join(', ') }}</td>
                    <td>{{ user.status }}</td>
                    <td>
                        {% if user.status == 'enabled' %}
                            <button
                                class="btn btn-danger btn-sm"
                                type="button"
                                data-target="confirmation"
                                data-action="{{ path('admin_user_disable', {user: user.id }) }}"
                                data-method="POST"
                            >
                                Disable
                            </button>
                        {% elseif user.status == 'disabled' %}
                            <button
                                class="btn btn-success btn-sm"
                                type="button"
                                data-target="confirmation"
                                data-action="{{ path('admin_user_enable', {user: user.id }) }}"
                                data-method="POST"
                            >
                                Enable
                            </button>
                        {% endif %}
                        <a href="{{ path('admin_user_roles', {user: user.id}) }}" class="btn btn-warning btn-sm">Change roles</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    {% include 'component/pagination.html.twig' with {'path_name': 'admin_user_list'} %}
</div>
{% endblock %}
